export FORCE_SHOW_SPINNER=true

alias pr="scripts/pull_request.sh"
alias gpush="git push origin HEAD"
alias gpull="git pull origin"
alias sfod="sfdx force:org:delete"
alias sfod="sfdx force:org:display"
alias snec="sfdx dxb:env:create"
alias sfoo="sfdx force:org:open"
alias spush="sfdx force:source:push"
alias spull="sfdx force:source:pull"
alias srefresh="sfdx dxb:env:refresh"
alias stest="spush && sfdx force:apex:test:run --resultformat human --outputdir .sfdx/tools/testresults/apex --loglevel error"
alias gclean="git branch -v | grep -E '[0-9a-zA-Z]{7} \[gone\]' | awk '{ print $1}' | xargs git branch -D $1"
